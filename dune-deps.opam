  "dune" {>= "3.0"}
  "ocaml" {>= "4.08.0"}
  "cmdliner"
  "sexplib"
  "alcotest" {with-test}
  "odoc" {with-doc}
]
depopts: ["conf-graphviz"]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
